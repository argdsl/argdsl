<?xml version="1.0" encoding="ASCII"?>
<Ardsl:Ontological
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:Ardsl="http://ardsl/1.0"
    name="skeet">
  <classes name="bullet"/>
  <classes name="target"/>
  <classes name="player"
      noSCN="true">
    <attributes
        name="ammo"
        type="Int"
        min="1"
        max="1"
        default="6"/>
  </classes>
  <graphic>
    <classes
        ontoClass="//@classes.0">
      <constraints
          sizeMin="0.5"
          sizeMax="1.0"
          overlapping="true"/>
      <versions
          name="v1"
          URL="xxxV1"/>
    </classes>
    <classes
        ontoClass="//@classes.1">
      <constraints
          sizeMin="0.5"
          sizeMax="1.0"
          overlapping="true"/>
      <versions
          name="v1"
          URL="xxxV1"/>
    </classes>
  </graphic>
  <physic>
    <classes
        ontoClass="//@classes.0">
      <physicBody
          mass="0.5"
          bodyType="dynamic"
          friction="0.1"
          restitution="0.5"
          damping="0.1"
          angularDamping="0.1"/>
      <bitMasks
          collision="//@classes.1"
          contact="//@classes.1"/>
      <forces
          name="shoot"
          gesture="touch"
          zVector="5.0"/>
    </classes>
    <classes
        ontoClass="//@classes.1">
      <physicBody
          friction="0.1"
          restitution="0.5"
          damping="0.1"
          angularDamping="0.1"/>
    </classes>
  </physic>
  <game win="HIT"
      lose="MISS"
      start="START">
    <gamepad
        name="shoot"
        trigger="//@game/@actionsTriggers.0"/>
    <score finish="-1"
        lives="3"/>
    <actionsTriggers
        name="shoot">
      <physicChanges
          object="bullet"
          class="//@classes.0"/>
      <physicChanges
          object="player"
          action="edit"
          class="//@classes.2"
          attribute="ammo"
          changeValue="-1"/>
    </actionsTriggers>
    <actionsTriggers
        name="gameover"
        action="lose"/>
    <actionsTriggers
        name="hit"
        scoreChange="1"/>
    <collisions
        classA="//@classes.0"
        classB="//@classes.1"
        action="//@game/@actionsTriggers.2"/>
    <objInit
        name="player"
        class="//@classes.2">
      <rules
          action="//@game/@actionsTriggers.1">
        <condition
            xsi:type="Ardsl:Binary"
            op="And">
          <left
              xsi:type="Ardsl:Arithmetic">
            <right
                xsi:type="Ardsl:ConstantValue"
                value="0"/>
            <left
                xsi:type="Ardsl:ConstantValue"
                value="ammo"/>
          </left>
          <right
              xsi:type="Ardsl:Arithmetic"
              op="greater">
            <right
                xsi:type="Ardsl:ConstantValue"
                value="0"/>
            <left
                xsi:type="Ardsl:AllInstances"
                type="target"/>
          </right>
        </condition>
      </rules>
    </objInit>
    <objInit
        name="target"
        posY="0.3"
        posZ="0.2"
        class="//@classes.1"/>
    <objInit
        name="target1"
        posX="0.2"
        posY="0.2"
        posZ="-0.3"
        class="//@classes.1"/>
    <objInit
        name="target2"
        posX="-0.5"
        posY="0.4"
        posZ="1.0"
        class="//@classes.1"/>
    <objInit
        name="target3"
        posX="-0.6"
        posY="0.2"
        posZ="-0.4"
        class="//@classes.1"/>
    <objInit
        name="target4"
        posX="-1.0"
        posY="0.3"
        posZ="-0.3"
        class="//@classes.1"/>
    <objInit
        name="target5"
        posY="0.4"
        posZ="-0.5"
        class="//@classes.1"/>
  </game>
</Ardsl:Ontological>
